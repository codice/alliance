<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

    <OCD name="MGMP Transformer Configuration" id="org.codice.alliance.catalog.mgmp.MgmpConfiguration"
         description="Configurations related to the MGMP metadata transformers">

        <AD description="Security classification mappings for MGMP ingest" name="Security Mappings"
            id="securityMappingList"
            required="true"
            type="String"
            cardinality="1000"
            default="official=OFFICIAL,officialSensitive=OFFICIAL-SENSITIVE,secret=SECRET"/>

        <AD description="The source system name to use in the generated MGMP XML.  If not specified, the system's source id will be used"
            name="Source System Name"
            id="sourceSystemName"
            required="false"
            type="String"/>
    </OCD>

    <Designate pid="org.codice.alliance.catalog.mgmp.MgmpConfiguration">
        <Object ocdref="org.codice.alliance.catalog.mgmp.MgmpConfiguration"/>
    </Designate>

</metatype:MetaData>
