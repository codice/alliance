<features name="${project.artifactId}-${project.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.3.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">

    <feature name="catalog-transformer-mgmp" install="auto" version="${project.version}"
             description="MGMPv2 Transformer">
        <feature dependency="true">mgmp-app</feature>
        <bundle dependency="true">mvn:org.codice.alliance.catalog.core/catalog-core-api/${project.version}</bundle>
        <bundle>mvn:org.codice.alliance.mgmp/catalog-transformer-mgmp/${project.version}</bundle>
    </feature>

    <feature name="mgmp-app" install="auto" version="${project.version}"
             description="The MGMP App provides supports for the UK MoD MGMPv2 metadata format. ::MGMP">
        <feature prerequisite="true">spatial-app</feature>
    </feature>
</features>
