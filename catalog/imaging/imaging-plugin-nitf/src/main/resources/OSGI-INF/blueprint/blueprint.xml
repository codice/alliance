<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="nitfRenderPlugin" class="org.codice.alliance.plugin.nitf.NitfRenderPlugin">
        <cm:managed-properties persistent-id="NITF_Render_Plugin"
                               update-strategy="container-managed"/>
        <property name="overviewMaxSideLength" value="1024"/>
    </bean>

    <service ref="nitfRenderPlugin" interface="org.codice.ddf.catalog.async.plugin.api.internal.PostProcessPlugin" >
        <service-properties>
            <entry key="name" value="nitf-render-plugin"/>
        </service-properties>
    </service>

</blueprint>