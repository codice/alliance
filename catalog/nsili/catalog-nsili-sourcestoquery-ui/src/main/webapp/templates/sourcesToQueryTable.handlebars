{{#exists queriedSources}}
<table class="table table-striped table-hover table-condensed">
    <thead>
    <tr>
        <th>Source Id</th>
        <th class="right"><a href="#"
                             class="fa fa-plus-square fa-lg plus-button show-create-modal"/></th>
    </tr>
    </thead>
    <tbody>
    {{#each queriedSources}}
    <tr>
        <td>{{sourceId}}</td>
        <td class="right"><a href="#" name="{{sourceId}}"
                             class="fa fa-minus-square fa-lg minus-button delete-icon"/></td>
    </tr>
    {{/each}}
    </tbody>
</table>
<div class="updateModalRegion"></div>
{{#unless queriedSources}}
<h5>There are no queried sources.</h5>
{{/unless}}
{{else}}
<h5>Loading configured sources...</h5>
{{/exists}}