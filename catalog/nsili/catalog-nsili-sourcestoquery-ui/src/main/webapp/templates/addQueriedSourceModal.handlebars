<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header modal-heading-with-help-tip">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title">Add Source to Query</h4>
        </div>
        <div class="modal-body">
            <div class="metatype control-group">
                <label class="control-label">Queryable Sources</label>
                {{#exists queryableSources}}
                {{#if queryableSources}}
                <div class="controls">
                    <select id="selectQueryableSource" name="selectQueryableSource"
                            class="form-control input-sm">
                        {{#each queryableSources}}
                        <option value="{{sourceId}}">{{sourceId}}</option>
                        {{/each}}
                    </select>
                </div>
                {{else}}
                <h5>There are no more sources available to add.</h5>
                {{/if}}
                {{else}}
                <h5>Loading sources...</h5>
                {{/exists}}
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group uploadFields">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary submit-queried-source-button"
                        data-dismiss="modal">Add
                </button>
            </div>
        </div>
    </div>
</div>